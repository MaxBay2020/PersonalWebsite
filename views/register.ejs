<div class="container theme-showcase" role="main">
    <form class="form-signin" method="post" action="/users/register">
        <div><img src="/public/images/logo.png" alt="personal logo" id="logo"></div>
        <h2 class="form-signin-heading">Please <%= title %> </h2>

        <% include messages %>
        <label for="username" class="sr-only">username</label>
        <input type="text" id="username" class="form-control" placeholder="username" name="username"
                value="<%= typeof username != 'undefined'? username: '' %>" required autofocus>

        <label for="password" class="sr-only">password</label>
        <input type="password" id="password" class="form-control" placeholder="Password" name="password"
               value="<%= typeof password != 'undefined'? password:''%>" required>

        <label for="email" class="sr-only">email</label>
        <input type="email" id="email" class="form-control" placeholder="email" name="email"
               value="<%= typeof email !='undefined'? email:''%>" required autofocus>



        <div class="checkbox">
            Already have an account? <a href="/users/login" target="_blank">Login</a>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>

</div>
